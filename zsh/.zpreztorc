
# Color output (auto set to 'no' on dumb terminals).
zstyle ':prezto:*:*' color yes

#
# Set Prezto modules to load
#

# 'editor' \
# 'history' \
# 'directory' \
# 'spectrum' \
# 'utility' \

zstyle ':prezto:load' pmodule \
  'git' \
  'prompt'

#
# Prompt
#

# Set the prompt theme to load.
zstyle ':prezto:module:prompt' theme 'andrew'

#
# Git
#

# Set a format for oneline log output
zstyle ':prezto:module:git:log:oneline' format '%C(white)%h%Creset %C(magenta)%<(12,trunc)%an%Creset %<(15)%C(bold black)%ad%Creset %<(70,trunc)%s %C(cyan)%d%Creset'

